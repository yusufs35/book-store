<%- include("header", {categories}); %>

<section class="content">
     <div class="container">
          <div class="row">
               <div class="col-12"><h1><%= category[0].title %></h1></div>
          </div>
          <div class="row">
               <% cat_books.forEach(function(book){ %>
                    <div class="col-md-2 mt-3">
                         <div class="card">
                              <a href="/book/<%=book.isbn%>">
                                   <img src="<%= book.thumbnailUrl %>" class="card-img-top" alt="<%= book.title %>">
                              </a>
                              <div class="card-body">
                                   <h6 class="card-title"><a href="/book/<%=book.isbn%>"><%= book.title %></a></h6>
                                   <div><%= book.authors[0] %></div>
                              </div>
                         </div>
                         
                    </div>
               <% }) %>
          </div>
     </div>
</section>



<%- include ("footer"); %>
